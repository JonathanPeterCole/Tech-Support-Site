{% extends "components/layout.html.j2" %}

{% block title %}
  Book
{% endblock %}

{% block head %}
  <link href="/static/css/components/pages.css{{ resource_version }}" rel="stylesheet">
  <link href="/static/css/book.css{{ resource_version }}" rel="stylesheet">
  <script src="/static/js/components/page-manager.js{{ resource_version }}" defer></script>
  <script src="/static/js/components/form-validation.js{{ resource_version }}" defer></script>
  <script src="/static/js/book.js{{ resource_version }}" defer></script>
  <script src="https://www.google.com/recaptcha/api.js" defer></script>
{% endblock %}

{% block body %}
  <main class="bg-grey">
    <section id="home" class="banner">
      <div class="parallax">
        <div class="banner-background fade-in"></div>
        <div class="banner-content">
          <div class="container">
            <h1>Book Now</h1>
          </div>
        </div>
      </div>
    </section>

    <section id="book">
      <div class="container">
        <div id="page-container">
          <!-- Loading Page -->
          <div id="loading" class="page display loading-container">
            <div class="loader">
              <svg class="circle" viewBox="0 0 50 50">
                <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
            </div>
          </div>

          <!-- Services Page -->
          <div id="service-selection" class="page hidden">
            <header class="left">
              <h2 class="gradient-text">Select the Service you want</h2>
            </header>
            <div class="row">
              <div class="col-md-4">
                <a class="selection-block" service-type="setup" target-page="setup-form">
                  <h3 class="title">New PC &amp; Accessory Setup</h3>
                  <img class="icon" src="/static/img/book/service/setup.svg"/>
                  <div class="price">£25</div>
                  <div class="text-light">On Site Only</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="selection-block" service-type="upgrade" target-page="upgrade-form">
                  <h3 class="title">Upgrade</h3>
                  <img class="icon" src="/static/img/book/service/upgrade.svg"/>
                  <div class="price">£20</div>
                  <div class="text-light">Plus Component Costs</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="selection-block" service-type="repair" target-page="repair-form">
                  <h3 class="title">Repairs and Virus Removal</h3>
                  <img class="icon" src="/static/img/book/service/repair.svg"/>
                  <div class="price">£30</div>
                  <div class="text-light">Plus Replacement Part Costs</div>
                </a>
              </div>
            </div>
          </div>

          <!-- Site Type Page -->
          <div id="site-selection" class="page hidden">
            <header class="left">
              <h2 class="gradient-text">On site or Drop off?</h2>
            </header>
            <div class="row">
              <div class="col-md-6">
                <a class="selection-block" site-type="drop-off" target-page="setup-form">
                  <h3 class="title">Drop Off</h3>
                  <img class="icon" src="/static/img/book/site/drop-off.svg"/>
                  <div class="price">No Additional Charge</div>
                </a>
              </div>
              <div class="col-md-6">
                <a class="selection-block" site-type="on-site" target-page="repair-form">
                  <h3 class="title">On Site</h3>
                  <img class="icon" src="/static/img/book/site/on-site.svg"/>
                  <div class="price">+£5</div>
                </a>
              </div>
            </div>
            <div class="row page-controls">
              <div class="col-md-12 page-buttons">
                <button class="back" type="button">Back</button>
              </div>
            </div>
          </div>

          <div id="form" class="page hidden">
            <header class="left">
              <h2 class="gradient-text">Please fill out these details</h2>
            </header>
            <form>
              <div class="content-container">
                <div id="form-page-container">
                  <div id="setup" class="page hidden">
                    {% include "forms/setup-form.html.j2" %}
                  </div>
                  <div id="upgrade" class="page hidden">
                    {% include "forms/upgrade-form.html.j2" %}
                  </div>
                  <div id="repair" class="page hidden">
                    {% include "forms/repair-form.html.j2" %}
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Beep Boop? <span class="highlight">(Required)</span></label>
                      <div class="g-recaptcha" data-sitekey="{{ site_key }}" data-callback="enableSubmit"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row page-controls">
                <div class="col-md-6">
                  <div class="page-status">
                    Something went wrong submitting your booking. Please try again.
                    <span class="error">
                      <!-- Error message will appear here -->
                    </span>
                  </div>
                </div>
                <div class="col-md-6 page-buttons">
                  <button class="back" type="button">Back</button>
                  <button class="highlight" type="submit" disabled>Submit Booking</button>
                </div>
              </div>
            </form>
          </div>

          <!-- Results Page -->
          <div id="result" class="page hidden">
            <header class="left">
              <h2 class="gradient-text">Booking Received</h2>
            </header>
            <div class="content-container success">
              <img class="icon" src="/static/img/book/success/tick.svg">
              <h3 class="title">Thanks For Booking</h3>
              <div class="text-light">I'll get back to you as soon as possible. Keep an eye out for the email.</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
