{% extends "components/layout.html.j2" %}

{% block title %}
  Book
{% endblock %}

{% block head %}
  <link href="/static/css/components/pages.css" rel="stylesheet">
  <script src="/static/js/components/page-manager.js"></script>
  <script src="/static/js/book.js"></script>
{% endblock %}

{% block body %}
  <main class="nav-margin">
    <div class="container">
      <div id="page-container">
        <!-- Loading Page -->
        <div id="loading" class="page display">
          <div class="loader">
            <svg class="circle" viewBox="0 0 50 50">
              <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
            </svg>
          </div>
        </div>
        <!-- Form Page -->
        <div id="form" class="page">
          <form id="booking-form" action="/book/submit" method="post">
            <div class="form-group">
              <label for="text-field-1">Test Field 1:</label><br>
              <input type="text" class="form-control" name="test-field-1"><br>
            </div>
            <div class="form-group">
              <label for="text-field-1">Test Field 2:</label><br>
              <input type="text" class="form-control" name="test-field-2"><br>
            </div>
            <button type="submit">Submit</button>
          </form>
        </div>
        <!-- Results Page -->
        <div id="result" class="page">
          <!-- AJAX Result should appear here -->
        </div>
      </div>
    </div>
  </main>
{% endblock %}
