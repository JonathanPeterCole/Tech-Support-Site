{% extends "components/layout.html.j2" %}

{% block title %}
  Book
{% endblock %}

{% block head %}
  <link href="/static/css/components/pages.css" rel="stylesheet">
  <link href="/static/css/book.css" rel="stylesheet">
  <script src="/static/js/components/page-manager.js" defer></script>
  <script src="/static/js/book.js" defer></script>
{% endblock %}

{% block body %}
  <main class="bg-grey">
    <section id="home" class="banner">
      <div class="banner-content">
        <div class="container">
          <h1>Book Now</h1>
        </div>
      </div>
    </section>

    <section id="book">
      <div class="container">
        <div id="page-container">
          <!-- Loading Page -->
          <div id="loading" class="page display loading-container">
            <div class="loader">
              <svg class="circle" viewBox="0 0 50 50">
                <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
            </div>
          </div>

          <!-- Services Page -->
          <div id="services" class="page">
            <header class="left">
              <h2 class="gradient-text">Select the Service you want</h2>
            </header>
            <div class="row">
              <div class="col-md-4">
                <a class="service" target-page="setup-form" href="#">
                  <div class="title">New PC &amp; Accessory Setup</div>
                  <div class="price">£20</div>
                  <div class="extra">On Site Only</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="service" target-page="upgrade-form" href="#">
                  <div class="title">Upgrade</div>
                  <div class="price">£20</div>
                  <div class="extra">Plus Component Costs</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="service" target-page="repairs-form" href="#">
                  <div class="title">Repairs and Virus Removal</div>
                  <div class="price">£30</div>
                  <div class="extra">Plus Replacement Part Costs</div>
                </a>
              </div>
            </div>
          </div>

          <!-- Form Page -->
          <form id="setup-form" class="page" action="/book/submit" method="post">
            Setup Form
            <div class="form-group">
              <label for="text-field-1">Test Field 1:</label><br>
              <input type="text" class="form-control" name="test-field-1"><br>
            </div>
            <div class="form-group">
              <label for="text-field-1">Test Field 2:</label><br>
              <input type="text" class="form-control" name="test-field-2"><br>
            </div>
            <button type="submit">Submit</button>
          </form>
          <!-- Results Page -->
          <div id="result" class="page">
            <!-- AJAX Result should appear here -->
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
