{% extends "components/layout.html.j2" %}

{% block title %}
  Book
{% endblock %}

{% block head %}
  <link href="/static/css/components/pages.css" rel="stylesheet">
  <link href="/static/css/book.css" rel="stylesheet">
  <script src="/static/js/components/page-manager.js" defer></script>
  <script src="/static/js/book.js" defer></script>
{% endblock %}

{% block body %}
  <main class="bg-grey">
    <section id="home" class="banner">
      <div class="parallax">
        <div class="banner-background fade-in"></div>
        <div class="banner-content">
          <div class="container">
            <h1>Book Now</h1>
          </div>
        </div>
      </div>
    </section>

    <section id="book">
      <div class="container">
        <div id="page-container">
          <!-- Loading Page -->
          <div id="loading" class="page display loading-container">
            <div class="loader">
              <svg class="circle" viewBox="0 0 50 50">
                <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
            </div>
          </div>

          <!-- Services Page -->
          <div id="service-selection" class="page">
            <header class="left">
              <h2 class="gradient-text">Select the Service you want</h2>
            </header>
            <div class="row">
              <div class="col-md-4">
                <a class="selection-block" service-type="setup" target-page="setup-form" href="#">
                  <img class="icon" src="/static/img/book/service/setup.svg"/>
                  <h3 class="title">New PC &amp; Accessory Setup</h3>
                  <div class="price">£20</div>
                  <div class="extra">On Site Only</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="selection-block" service-type="upgrade" target-page="upgrade-form" href="#">
                  <img class="icon" src="/static/img/book/service/upgrade.svg"/>
                  <h3 class="title">Upgrade</h3>
                  <div class="price">£20</div>
                  <div class="extra">Plus Component Costs</div>
                </a>
              </div>
              <div class="col-md-4">
                <a class="selection-block" service-type="repair" target-page="repair-form" href="#">
                  <img class="icon" src="/static/img/book/service/repair.svg"/>
                  <h3 class="title">Repairs and Virus Removal</h3>
                  <div class="price">£30</div>
                  <div class="extra">Plus Replacement Part Costs</div>
                </a>
              </div>
            </div>
          </div>

          <!-- Site Type Page -->
          <div id="site-selection" class="page">
            <header class="left">
              <h2 class="gradient-text">On site or Drop off?</h2>
            </header>
            <div class="row">
              <div class="col-md-6">
                <a class="selection-block" site-type="drop-off" target-page="setup-form" href="#">
                  <img class="icon" src="/static/img/book/site/drop-off.svg"/>
                  <h3 class="title">Drop Off</h3>
                  <div class="price">No Additional Charge</div>
                </a>
              </div>
              <div class="col-md-6">
                <a class="selection-block" site-type="on-site" target-page="repair-form" href="#">
                  <img class="icon" src="/static/img/book/site/on-site.svg"/>
                  <h3 class="title">On Site</h3>
                  <div class="price">+£5</div>
                </a>
              </div>
            </div>
          </div>

          <!-- Setup Form Page -->
          <div id="setup-form" class="page">
            <header class="left">
              <h2 class="gradient-text">New PC and Accessory Setup</h2>
            </header>
            <form class="form-container">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="name">Your Name (Required)</label>
                    <input type="text" class="form-control" name="name" placeholder="Your Name"/>
                  </div>
                  <div class="form-group">
                    <label for="email">Your Email (Required)</label>
                    <input type="email" class="form-control" name="email" placeholder="Your Email"/>
                  </div>
                  <div class="form-group">
                    <label for="phone">Your Phone Number</label>
                    <input type="text" class="form-control" name="phone" placeholder="Your Phone Number"/>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="pc-model">Your PC Make and Model</label>
                    <input type="text" class="form-control" name="pc-model" placeholder="For Example: Dell XPS 15 9560"/>
                  </div>
                  <div class="form-group">
                    <label for="pc-model">Windows Version</label>
                    <input type="text" class="form-control" name="windows-version" placeholder="For Example: Windows 10"/>
                  </div>
                  <div class="form-group">
                    <label for="accessory">Your New Accessory</label>
                    <input type="email" class="form-control" name="accessory" placeholder="For Example: BenQ XL2730Z"/>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="message">Message (Required)</label>
                    <textarea class="form-control" rows="6" name="messsage"></textarea>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button type="submit">Submit</button>
                </div>
              </div>
            </form>
          </div>

          <!-- Upgrade Form Page -->
          <div id="upgrade-form" class="page">
            <header class="left">
              <h2 class="gradient-text">Upgrade</h2>
            </header>
            <form class="form-container">
              <div class="form-group">
                <label for="text-field-1">Test Field 1:</label><br>
                <input type="text" class="form-control" name="test-field"><br>
              </div>
              <button type="submit">Submit</button>
            </form>
          </div>

          <!-- Repair Form Page -->
          <div id="repair-form" class="page">
            <header class="left">
              <h2 class="gradient-text">Repairs and Virus Removal</h2>
            </header>
            <form class="form-container">
              <div class="form-group">
                <label for="text-field-1">Test Field 1:</label><br>
                <input type="text" class="form-control" name="test-field"><br>
              </div>
              <button type="submit">Submit</button>
            </form>
          </div>

          <!-- Results Page -->
          <div id="result" class="page">
            <!-- AJAX Result should appear here -->
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
