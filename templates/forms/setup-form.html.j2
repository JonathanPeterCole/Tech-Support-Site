<form class="form-container">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="name">Your Name (Required)</label>
        <input type="text" class="form-control" name="name" placeholder="Your Name">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="email">Your Email (Required)</label>
        <input type="email" class="form-control" name="email" placeholder="Your Email">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="phone">Your Phone Number</label>
        <input type="text" class="form-control" name="phone" placeholder="Your Phone Number">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="pc-model">Your PC Make and Model</label>
        <input type="text" class="form-control" name="pc-model" placeholder="For Example: Dell XPS 15 9560">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="accessory">Your New Accessory</label>
        <input type="email" class="form-control" name="accessory" placeholder="For Example: BenQ XL2730Z">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="pc-model">Your Windows Version</label>
        <input type="text" class="form-control" name="win-ver" placeholder="For Example: Windows 10">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="message">Message (Required)</label>
        <textarea class="form-control" rows="6" name="messsage"></textarea>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <button type="submit">Submit</button>
    </div>
  </div>
</form>
