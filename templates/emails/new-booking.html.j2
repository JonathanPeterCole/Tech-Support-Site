<html>
  <head></head>
  <body>
    <h1>New Booking from {{ data['name'] }}</h1>

    <h2>Customer Details</h2>
    <p>
      <b>Name:</b> {{ data['name'] }}<br>
      <b>Email:</b> {{ data['email'] }}<br>
      {% if data['phone'] %}
        <b>Phone Number:</b> {{ data['phone'] }}
      {% endif %}
    </p>

    <h2>Service Details</h2>
    <p>
      <b>Service Type:</b> {{ data['service-type'] }}<br>
      {% if data['site-type'] %}
        <b>Site Type:</b> {{ data['site-type'] }}<br>
      {% endif %}
      {% if data['pc-model'] %}
        <b>PC Make and Model:</b> {{ data['pc-model'] }}<br>
      {% endif %}
      {% if data['accessory'] %}
        <b>New Accessory:</b> {{ data['accessory'] }}<br>
      {% endif %}
      {% if data['win-ver'] %}
        <b>Windows Version:</b> {{ data['win-ver'] }}<br>
      {% endif %}
      {% if data['error'] %}
        <b>Error:</b> {{ data['error'] }}<br>
      {% endif %}
      {% if data['upgrade-type'] %}
        <b>Upgrade Type:</b> {{ data['upgrade-type'] }}
      {% endif %}
    </p>

    <h2>Message</h2>
    <p>
      {{ data['message'] }}
    </p>
  </body>
</html>
